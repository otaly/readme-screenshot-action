{
  "name": "readme-screenshot-action",
  "version": "v1.0.0",
  "description": "READMEのスクリーンショットを自動更新するアクション",
  "main": "dist/index.js",
  "scripts": {
    "bundle": "npm run check:write && npm run package",
    "package": "npx ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "jest",
    "check": "npx @biomejs/biome check .",
    "check:write": "npx @biomejs/biome check --write ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "puppeteer": "^22.15.0",
    "wait-on": "^7.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.0",
    "@types/wait-on": "^5.3.4",
    "@vercel/ncc": "^0.38.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
